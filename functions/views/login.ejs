<!DOCTYPE html>
<html>
	<head>
		<%- include('components/ga') -%> <%- include('components/meta') -%>
		<title>Login | Equity Sports</title>
		<meta property="og:title" content="Login | Equity Sports" />
		<meta
			property="og:url"
			content="https://equity-sports.web.app/login"
		/>
		<script src="/__/firebase/7.15.0/firebase-app.js"></script>
		<script src="/__/firebase/7.15.0/firebase-auth.js"></script>
		<script src="/__/firebase/init.js"></script>
		<script src="https://www.gstatic.com/firebasejs/ui/4.5.1/firebase-ui-auth.js"></script>
		<link
			type="text/css"
			rel="stylesheet"
			href="https://www.gstatic.com/firebasejs/ui/4.5.1/firebase-ui-auth.css"
		/>
		<link
			href="/css/login.css"
			rel="stylesheet"
			type="text/css"
			media="screen"
		/>
	</head>
	<body>
		<div id="container">
			<img
				class="img-fluid"
				src="/android-chrome-192x192.png"
			/>
			<div id="loading">Loading...</div>
			<div id="loaded" class="hidden">
				<div id="main">
					<div id="user-signed-in" class="hidden">
						<div id="user-info">
							<div id="photo-container">
								<img id="photo" />
							</div>
							<div id="name"></div>
							<div id="email"></div>
							<div id="phone"></div>
							<div id="is-new-user"></div>
							<div class="clearfix"></div>
						</div>
						<p>
							<button id="sign-out">Sign Out</button>
							<button id="delete-account">Delete account</button>
						</p>
					</div>
					<div id="user-signed-out" class="hidden">
						<div id="firebaseui-spa">
							<div id="firebaseui-container"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<script src="/js/app.js"></script>
	</body>
</html>
