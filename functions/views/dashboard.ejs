<!DOCTYPE html>
<html>
	<head>
		<% include ga.ejs %> <%include meta.ejs %>
		<title>Dashboard | Equity Sports</title>
		<meta property="og:title" content="Dashboard | Equity Sports" />
		<meta
			property="og:url"
			content="https://equity-sports.firebaseapp.com/Dashboard"
		/>
		<script src="/__/firebase/5.8.3/firebase-app.js"></script>
		<script src="/__/firebase/5.8.3/firebase-auth.js"></script>
		<script src="/__/firebase/5.8.3/firebase-firestore.js"></script>
		<script src="/__/firebase/init.js"></script>
	</head>

	<body>
		<script>
			firebase.auth().onAuthStateChanged(function(user) {
				console.log(user.uid);
				if (user) {
					console.log(user.uid);
					firebase
						.firestore()
						.collection('users')
						.doc(user.uid)
						.get()
						.then(doc => {
							console.log(doc.data().role);
							if (doc.exists) {
								console.log(doc.data().role());
								if (doc.data().role === "player"){
									console.log("Helllo, I am a player")
								}
							}
						})
						.catch(err => {
							console.log(err);
							window.location = '/login';
						});
				 } //else window.location = '/login';
			});
		</script>
	</body>
</html>
